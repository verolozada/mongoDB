<div class="container">
    <div class="row">
        {{#each article}}
        <div class="col s12 m12">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.imageLink}}">
                </div>
                <div class="card-content">
                    <h4>{{this.headline}}</h4>
                    <hr>
                    <p>{{this.description}}</p>
                    <span class="right-badge time">{{this.publishTime}}</span>
                </div>
                <div class="card-action">
                    <a class="article-link-btn btn" target="_blank" href="{{this.articleLink}}">Link to Article</a>
                    <a href="#comment-modal-{{this._id}}" data-id="{{this._id}}" class="comment-btn  btn modal-trigger">Comment</a>
                    <a data-id="{{this._id}}" class="delete-btn  btn">Delete</a>
                </div>
            </div>
        </div>

        {{!-- Maintenance Request Details Modal --}}
        <div id="comment-modal-{{this._id}}" class="modal modal-fixed-footer center-align">
            <div class="modal-content">
                <div class="row">
                    <div class="col s4 push-s4">
                        <h5>Headline</h5>
                        <div>{{this.headline}}</div>
                    </div>
                </div>
                <br>
                <h5>Comments:</h5>
                {{!-- Existing Comments --}}
                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Comment</th>
                            <th>Date</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each this.comment}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.comment}}</td>
                            <td>{{this.createdAt}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <br>
                <h5>Add Comment:</h5>
                {{!-- Name --}}
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="icon_prefix" type="text" class="username validate">
                                <label for="icon_prefix">Name</label>
                            </div>
                        </div>
                    </form>
                </div>
                {{!-- Comment Input --}}
                <div class="row">
                    <form class="col s12">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">comment</i>
                                <textarea id="comment-input" class="materialize-textarea"></textarea>
                                <label for="textarea1">Comment</label>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#!" data-id="{{this._id}}" class="submit-btn btn  ocean-blue">Submit
                    Comment</a>
                <a href="#!" class="modal-close btn  ocean-blue">Close</a>
            </div>
        </div>
        {{/each}}
    </div>
</div>