<div class="container">
    <div class="row">
        {{#each article}}
        <div class="col s12 m12">
            <div class="card">
                <div class="card-image">
                    <img src="{{this.imageLink}}">
                </div>
                <div class="card-content">
                    <h4>{{this.headline}}</h4>
                    <hr>
                    <p>{{this.description}}</p>
                    <span class="right-badge time">{{this.publishTime}}</span>
                </div>
                <div class="card-action">
                    <a class="article-btn waves-effect waves-light btn" target="_blank" href="https://www.reuters.com{{this.articleLink}}">Link to Article</a>
                    <a data-id="{{this._id}}" class="save-btn waves-effect waves-light btn">Save Article</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>